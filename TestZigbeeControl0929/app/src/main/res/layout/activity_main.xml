<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="环境情况"
        android:textColor="#000"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.05"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="光照值："
        android:textColor="#000"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.1"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温度值："
        android:textColor="#000"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintHorizontal_bias="0.1"/>

    <TextView
        android:id="@+id/tv_gz"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:text=""
        android:maxLength="5"
        android:paddingLeft="10dp"
        android:background="@drawable/tv"
        android:textColor="#000"
        android:textSize="40sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv2"
        app:layout_constraintLeft_toRightOf="@id/tv2"
        />

    <TextView
        android:id="@+id/tv22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lx"
        android:textColor="#000"
        android:textSize="40sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv2"
        app:layout_constraintLeft_toRightOf="@id/tv_gz"
        />

    <TextView
        android:id="@+id/tv_wd"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:text=""
        android:paddingLeft="10dp"
        android:background="@drawable/tv"
        android:textColor="#000"
        android:textSize="40sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv3"
        app:layout_constraintLeft_toRightOf="@id/tv3"
        />

    <TextView
        android:id="@+id/tv33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="℃"
        android:textColor="#000"
        android:textSize="40sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv3"
        app:layout_constraintLeft_toRightOf="@id/tv_wd"
        />
    <View
        android:layout_width="1200dp"
        android:layout_height="20dp"
        android:layerType="software"
        android:background="@drawable/line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.35"
        />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="控制规则"
        android:textColor="#000"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintHorizontal_bias="0.05"/>

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="光照低于"
        android:textColor="#000"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.55"
        app:layout_constraintHorizontal_bias="0.1"/>

    <EditText
        android:id="@+id/ed_gz1"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:textColor="#000"
        android:textSize="50sp"
        android:background="@drawable/tv"
        app:layout_constraintTop_toTopOf="@id/tv5"
        app:layout_constraintBottom_toBottomOf="@id/tv5"
        app:layout_constraintLeft_toRightOf="@id/tv5"
        />

    <TextView
        android:id="@+id/tv55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lx照明灯亮，光照高于"
        android:textColor="#000"
        android:textSize="40sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv5"
        app:layout_constraintLeft_toRightOf="@id/ed_gz1"
        />


    <EditText
        android:id="@+id/ed_gz2"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:textColor="#000"
        android:textSize="50sp"
        android:background="@drawable/tv"
        app:layout_constraintTop_toTopOf="@id/tv55"
        app:layout_constraintBottom_toBottomOf="@id/tv55"
        app:layout_constraintLeft_toRightOf="@id/tv55"
        />

    <TextView
        android:id="@+id/tv555"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lx照明灯灭。"
        android:textColor="#000"
        android:textSize="40sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv5"
        app:layout_constraintLeft_toRightOf="@id/ed_gz2"
        />
    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温度高于"
        android:textColor="#000"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.65"
        app:layout_constraintHorizontal_bias="0.1"/>

    <EditText
        android:id="@+id/ed_wd1"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:textColor="#000"
        android:textSize="50sp"
        android:background="@drawable/tv"
        app:layout_constraintTop_toTopOf="@id/tv6"
        app:layout_constraintBottom_toBottomOf="@id/tv6"
        app:layout_constraintLeft_toRightOf="@id/tv6"
        />

    <TextView
        android:id="@+id/tv66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="℃风扇启动，温度低于"
        android:textColor="#000"
        android:textSize="40sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv6"
        app:layout_constraintRight_toRightOf="@id/tv55"
        />

    <EditText
        android:id="@+id/ed_wd2"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:textColor="#000"
        android:textSize="50sp"
        android:background="@drawable/tv"
        app:layout_constraintTop_toTopOf="@id/tv66"
        app:layout_constraintBottom_toBottomOf="@id/tv66"
        app:layout_constraintLeft_toRightOf="@id/tv66"
        />
    <TextView
        android:id="@+id/tv666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="℃风扇停止。"
        android:textColor="#000"
        android:textSize="40sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv6"
        app:layout_constraintRight_toRightOf="@id/tv555"
        />
    <Button
        android:id="@+id/bt"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:text="启动监测"
        android:textSize="40sp"
        android:background="@drawable/click"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.85"
        />

    <TextView
        android:id="@+id/tv_cw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="错误信息：请将规则临界点填写完整，临界点仅支持正整数。"
        android:textColor="#000"
        android:textSize="40sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.99"
        app:layout_constraintHorizontal_bias="0.3"/>
</androidx.constraintlayout.widget.ConstraintLayout>