<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="环境情况"
        android:textSize="40sp"
        android:textColor="#000"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="光照值："
        android:textSize="40sp"
        android:textColor="#000"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温度值："
        android:textSize="40sp"
        android:textColor="#000"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_gz"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:textSize="40sp"
        android:textColor="#000"
        android:maxLines="6"
        android:paddingLeft="10dp"
        android:background="@drawable/text"
        app:layout_constraintTop_toTopOf="@id/tv2"
        app:layout_constraintBottom_toBottomOf="@id/tv2"
        app:layout_constraintLeft_toRightOf="@id/tv2"/>
    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lx"
        android:textSize="40sp"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="@id/tv_gz"
        app:layout_constraintBottom_toBottomOf="@id/tv_gz"
        app:layout_constraintLeft_toRightOf="@id/tv_gz"/>
    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="℃"
        android:textSize="40sp"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="@id/tv_wd"
        app:layout_constraintBottom_toBottomOf="@id/tv_wd"
        app:layout_constraintLeft_toRightOf="@id/tv_wd"/>
    <TextView
        android:id="@+id/tv_wd"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:textSize="40sp"
        android:textColor="#000"
        android:paddingLeft="10dp"
        android:background="@drawable/text"
        app:layout_constraintTop_toTopOf="@id/tv3"
        app:layout_constraintBottom_toBottomOf="@id/tv3"
        app:layout_constraintLeft_toRightOf="@id/tv3"/>



    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="控制规则"
        android:textSize="40sp"
        android:textColor="#000"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="光照低于"
        android:textSize="40sp"
        android:textColor="#000"
        app:layout_constraintVertical_bias="0.55"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_gz1"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:textSize="40sp"
        android:textColor="#000"
        android:inputType="number"
        android:background="@drawable/text"
        app:layout_constraintTop_toTopOf="@id/tv7"
        app:layout_constraintBottom_toBottomOf="@id/tv7"
        app:layout_constraintLeft_toRightOf="@id/tv7"/>
    <TextView
        android:id="@+id/tv8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温度高于"
        android:textSize="40sp"
        android:textColor="#000"
        app:layout_constraintVertical_bias="0.65"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_wd1"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:textSize="40sp"
        android:textColor="#000"
        android:inputType="number"
        android:background="@drawable/text"
        app:layout_constraintTop_toTopOf="@id/tv8"
        app:layout_constraintBottom_toBottomOf="@id/tv8"
        app:layout_constraintLeft_toRightOf="@id/tv8"/>

    <TextView
        android:id="@+id/tv9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lx照明灯亮，光照高于"
        android:textSize="40sp"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="@id/ed_gz1"
        app:layout_constraintBottom_toBottomOf="@id/ed_gz1"
        app:layout_constraintLeft_toRightOf="@id/ed_gz1"/>
    <TextView
        android:id="@+id/tv10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="℃风扇启动，温度低于"
        android:textSize="40sp"
        android:textColor="#000"
        app:layout_constraintRight_toRightOf="@id/tv9"
        app:layout_constraintBaseline_toBaselineOf="@id/tv8"/>

    <EditText
        android:id="@+id/ed_gz2"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:textSize="40sp"
        android:textColor="#000"
        android:inputType="number"
        android:background="@drawable/text"
        app:layout_constraintTop_toTopOf="@id/tv9"
        app:layout_constraintBottom_toBottomOf="@id/tv9"
        app:layout_constraintLeft_toRightOf="@id/tv9"/>

    <EditText
        android:id="@+id/ed_wd2"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:textSize="40sp"
        android:textColor="#000"
        android:inputType="number"
        android:background="@drawable/text"
        app:layout_constraintTop_toTopOf="@id/tv10"
        app:layout_constraintBottom_toBottomOf="@id/tv10"
        app:layout_constraintLeft_toRightOf="@id/tv10"/>

    <TextView
        android:id="@+id/tv11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lx照明灯灭。"
        android:textSize="40sp"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="@id/ed_gz2"
        app:layout_constraintBottom_toBottomOf="@id/ed_gz2"
        app:layout_constraintLeft_toRightOf="@id/ed_gz2"/>

    <TextView
        android:id="@+id/tv12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="℃风扇停止。"
        android:textSize="40sp"
        android:textColor="#000"
        app:layout_constraintRight_toRightOf="@id/tv11"
        app:layout_constraintBaseline_toBaselineOf="@id/tv10"/>
    <Button
        android:id="@+id/bt"
        android:layout_width="300dp"
        android:layout_height="85dp"
        android:text="启动监测"
        android:textSize="40sp"
        android:textColor="#000"
        android:background="@drawable/click"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="错误信息：请将规则临界点填写完整，临界点仅支持正整数。"
        android:textSize="40sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintVertical_bias="0.99"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        <View
            android:layout_width="1200dp"
            android:layout_height="20dp"
            android:layerType="software"
            android:background="@drawable/line"
            app:layout_constraintVertical_bias="0.36"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>