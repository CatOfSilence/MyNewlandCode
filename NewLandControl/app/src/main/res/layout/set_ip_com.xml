<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_set_ip">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="IP："
            android:textColor="#FF5722"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginRight="50dp" />

        <EditText
            android:id="@+id/ed_set1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/edit"
            android:paddingLeft="10dp"
            android:textColor="#000"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@id/tv1"
            app:layout_constraintLeft_toRightOf="@id/tv1"
            app:layout_constraintTop_toTopOf="@id/tv1" />
        <TextView
            android:id="@+id/tv_setip_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据线程："
            android:textSize="40sp"
            android:textColor="#000"
            app:layout_constraintVertical_bias="0.35"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tv_setip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启动"
            android:textSize="40sp"
            android:textColor="#FF0000"
            app:layout_constraintTop_toTopOf="@id/tv_setip_"
            app:layout_constraintLeft_toRightOf="@id/tv_setip_"
            app:layout_constraintBottom_toBottomOf="@id/tv_setip_"/>
        <Switch
            android:id="@+id/sw_setip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:track="@drawable/track"
            android:thumb="@drawable/thumb"
            android:switchMinWidth="200dp"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/ed_set1"
            app:layout_constraintRight_toRightOf="@id/ed_set1"/>
        <Button
            android:id="@+id/bt_confirm"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/click"
            android:text="确定"
            android:textColor="#000"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.7" />

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/click"
            android:text="取消"
            android:textColor="#000"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.7" />

        <Button
            android:id="@+id/bt_reload"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="恢复默认设置"
            android:textColor="#000"
            android:textSize="30sp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>