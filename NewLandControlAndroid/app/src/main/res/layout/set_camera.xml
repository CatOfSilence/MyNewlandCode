<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_back"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_setcamera_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前状态："
            android:textSize="30sp"
            android:textColor="#000"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tv_setcamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭中......"
            android:textSize="30sp"
            android:textColor="#FF0000"
            app:layout_constraintTop_toTopOf="@id/tv_setcamera_"
            app:layout_constraintLeft_toRightOf="@id/tv_setcamera_"
            app:layout_constraintBottom_toBottomOf="@id/tv_setcamera_"/>
        <Switch
            android:id="@+id/sw_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:track="@drawable/track"
            android:thumb="@drawable/thumb"
            android:switchMinWidth="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/bt_setcamera"
            app:layout_constraintRight_toRightOf="@id/bt_setcamera"
            app:layout_constraintVertical_bias="0.4"/>
        <Button
            android:id="@+id/bt_setcamera"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:text="确认"
            android:textSize="25sp"
            android:textColor="#000"
            android:background="@drawable/click"
            app:layout_constraintVertical_bias="0.8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>