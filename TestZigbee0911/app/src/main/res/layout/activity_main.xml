        android:id="@+id/tv_getwendu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50sp"
        android:textColor="#000"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_wendu"
        app:layout_constraintLeft_toRightOf="@id/tv_wendu"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_shidu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="湿度："
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintHorizontal_bias="0.35"/>
    <TextView
        android:id="@+id/tv_getshidu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50sp"
        android:textColor="#000"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_shidu"
        app:layout_constraintLeft_toRightOf="@id/tv_shidu"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_huoyan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="火焰："
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintHorizontal_bias="0.6"/>
    <TextView
        android:id="@+id/tv_gethuoyan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50sp"
        android:textColor="#000"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_huoyan"
