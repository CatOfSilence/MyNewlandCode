<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:layout_margin="25dp"
    >
    <TextView
        android:id="@+id/btn_ptz_up"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btn_handle_center"
        android:background="@drawable/bg_btn_ptz"
        android:textColor="@color/colorBlue"
        android:textSize="30sp"
        android:text="△"
        />

    <TextView
        android:id="@+id/btn_ptz_left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/btn_handle_center"
        android:background="@drawable/bg_btn_ptz"
        android:textColor="@color/colorBlue"
        android:textSize="30sp"
        android:text="◁"
        />

    <TextView
        android:id="@+id/btn_ptz_right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/btn_handle_center"
        android:background="@drawable/bg_btn_ptz"
        android:textColor="@color/colorBlue"
        android:textSize="30sp"
        android:text="▷"
        />

    <TextView
        android:id="@+id/btn_ptz_down"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_handle_center"
        android:background="@drawable/bg_btn_ptz"
        android:textColor="@color/colorBlue"
        android:textSize="30sp"
        android:text="▽"
        />

    <TextView
        android:id="@+id/btn_handle_center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_grid_transparent"
        />


</RelativeLayout>
