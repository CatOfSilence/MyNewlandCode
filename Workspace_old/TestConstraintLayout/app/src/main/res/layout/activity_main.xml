<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.791" />
    <ImageView
        android:id="@+id/image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image2"
        app:layout_constraintBottom_toTopOf="@id/image1"
        app:layout_constraintLeft_toLeftOf="@id/image1"
        app:layout_constraintRight_toRightOf="@id/image1" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image3"
        app:layout_constraintBottom_toBottomOf="@id/image1"
        app:layout_constraintRight_toLeftOf="@id/image1"
        app:layout_constraintTop_toTopOf="@id/image1"/>
    <TextView
        android:id="@+id/ed1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="good"
        android:textSize="50sp"
        app:layout_constraintLeft_toRightOf="@id/image1"
        app:layout_constraintTop_toTopOf="@id/image1"
        app:layout_constraintBottom_toBottomOf="@id/image1"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="everyone"
        android:textSize="50sp"
        app:layout_constraintLeft_toRightOf="@id/ed1"
        app:layout_constraintTop_toTopOf="@id/ed1"
        app:layout_constraintBaseline_toBaselineOf="@id/ed1"
        app:layout_constraintBottom_toBottomOf="@id/ed1"/>

</android.support.constraint.ConstraintLayout>