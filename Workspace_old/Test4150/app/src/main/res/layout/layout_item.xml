<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="红外：DI"
                android:textColor="#000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/ed_infrared"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"

                android:inputType="number"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接近：DI"
                android:textColor="#000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/ed_jiejin"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"

                android:inputType="number"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行程：DI"
                android:textColor="#000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/ed_xc"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"

                android:inputType="number"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微动1：DI"
                android:textColor="#000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/ed_weidong1"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"

                android:inputType="number"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微动2：DI"
                android:textColor="#000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/ed_weidong2"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"

                android:inputType="number"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="烟雾：DI"
                android:textColor="#000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/ed_smog"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"

                android:inputType="number"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人体：DI"
                android:textColor="#000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/ed_renti"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"

                android:inputType="number"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="灯泡：DO"
                android:textColor="#000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/ed_light"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"

                android:inputType="number"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风扇：DO"
                android:textColor="#000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/ed_fan"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"

                android:inputType="number"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="前进：DO"
                android:textColor="#000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/ed_qianjin"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"

                android:inputType="number"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="后退：DO"
                android:textColor="#000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/ed_houtui"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"

                android:inputType="number"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="红灯：DO"
                android:textColor="#000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/ed_red"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"

                android:inputType="number"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绿灯：DO"
                android:textColor="#000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/ed_green"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"

                android:inputType="number"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黄灯：DO"
                android:textColor="#000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/ed_yellow"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"

                android:inputType="number"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="警灯：DO"
                android:textColor="#000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/ed_alert"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"

                android:inputType="number"
                android:textSize="40sp" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:gravity="center">

        <Button
            android:id="@+id/Bt_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_select"
            android:text="确定"
            android:textColor="#000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/Bt_cannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Bt_set"
            android:background="@drawable/button_select"
            android:text="取消"
            android:textColor="#000"
            android:textSize="30sp" />
    </RelativeLayout>
</LinearLayout>