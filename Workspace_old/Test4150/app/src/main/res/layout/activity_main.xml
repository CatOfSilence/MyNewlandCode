<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.newland.test4150.MainActivity"
    android:orientation="vertical"
    android:gravity="center">
    <RadioGroup
        android:id="@+id/rg_4150"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:id="@+id/rb_socket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Socket通讯"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rb_serial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="串口通讯"
            android:textSize="15sp" />
    </RadioGroup>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center">
        <TextView
            android:id="@+id/infrared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红外对射：0"
            android:textColor="#000"
            android:textSize="40sp"/>
        <TextView
            android:id="@+id/jiejin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接近开关：0"
            android:textColor="#000"
            android:textSize="40sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/infrared"/>
        <TextView
            android:id="@+id/xingcheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="行程开关：0"
            android:textSize="40sp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/jiejin"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/weidong1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微动开关（1）：0"
            android:textColor="#000"
            android:textSize="40sp"/>
        <TextView
            android:id="@+id/weidong2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微动开关（2）：0"
            android:textColor="#000"
            android:textSize="40sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/weidong1"/>
        <TextView
            android:id="@+id/smoke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="烟雾数据：0"
            android:textColor="#000"
            android:textSize="40sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/weidong2"/>
        <TextView
            android:id="@+id/renti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人体数据：0"
            android:textColor="#000"
            android:textSize="40sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/smoke"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <Switch
            android:id="@+id/light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="照明灯："
            android:textSize="40sp"
            android:thumb="@drawable/switch_circle"
            android:track="@drawable/switch_bg"
            />
        <Switch
            android:id="@+id/fan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风扇："
            android:textSize="40sp"
            android:layout_marginLeft="50dp"
            android:thumb="@drawable/switch_circle"
            android:track="@drawable/switch_bg"
            android:layout_toRightOf="@id/light"
            />
        <Switch
            android:id="@+id/qianjin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="前进推杆："
            android:textSize="40sp"
            android:layout_marginLeft="50dp"
            android:thumb="@drawable/switch_circle"
            android:track="@drawable/switch_bg"
            android:layout_toRightOf="@id/fan"
            />
        <Switch
            android:id="@+id/houtui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="后退推杆："
            android:textSize="40sp"
            android:layout_marginLeft="50dp"
            android:thumb="@drawable/switch_circle"
            android:track="@drawable/switch_bg"
            android:layout_toRightOf="@id/qianjin"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <Switch
            android:id="@+id/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红色灯："
            android:textSize="40sp"
            android:thumb="@drawable/switch_circle"
            android:track="@drawable/switch_bg"
            />
        <Switch
            android:id="@+id/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绿色灯："
            android:textSize="40sp"
            android:thumb="@drawable/switch_circle"
            android:track="@drawable/switch_bg"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/red"
            />
        <Switch
            android:id="@+id/yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黄色灯："
            android:textSize="40sp"
            android:thumb="@drawable/switch_circle"
            android:track="@drawable/switch_bg"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/green"
            />
        <Switch
            android:id="@+id/alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="警示灯："
            android:textSize="40sp"
            android:thumb="@drawable/switch_circle"
            android:track="@drawable/switch_bg"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/yellow"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/Bt_4150"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配置接口"
            android:textSize="30sp"
            android:textColor="#000"
            android:background="@drawable/button_select"/>
    </RelativeLayout>
</LinearLayout>