<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg">

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:background="@drawable/login_bg_blue">

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="560dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:src="@mipmap/icon_smart_park"/>

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/input_normal"
                android:hint="请输入用户名"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textSize="@dimen/txt_default"/>

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@mipmap/input_normal"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textSize="@dimen/txt_default"/>

            <CheckBox
                android:id="@+id/cb_rem_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/gas_m"
                android:button="@drawable/selector_rem_pwd"
                android:text="  记住密码"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_default"/>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_login_selector"
                android:text="登陆"
                android:textSize="@dimen/txt_default"/>

            <Button
                android:id="@+id/btn_registe"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/gas_m"
                android:background="@drawable/btn_login_selector"
                android:text="注册"
                android:textSize="@dimen/txt_default"/>
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>