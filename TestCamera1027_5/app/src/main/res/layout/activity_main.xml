<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextureView
        android:id="@+id/ture"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#000"
        app:layout_constraintDimensionRatio="2:1.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/bt_open"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="开"
        android:textSize="45sp"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ture"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/bt_capture"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="截图"
        android:textSize="45sp"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ture"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/bt_close"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="关"
        android:textSize="45sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBaseline_toBaselineOf="@id/bt_open"
        app:layout_constraintLeft_toRightOf="@id/bt_open"/>
    <Button
        android:id="@+id/bt_up"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="上"
        android:textSize="45sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ture"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/bt_left"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="左"
        android:textSize="45sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintCircle="@id/bt_up"
        app:layout_constraintCircleAngle="225"
        app:layout_constraintCircleRadius="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ture"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/bt_right"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="右"
        android:textSize="45sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintCircle="@id/bt_up"
        app:layout_constraintCircleAngle="135"
        app:layout_constraintCircleRadius="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ture"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/bt_down"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="下"
        android:textSize="45sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintCircle="@id/bt_up"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="170dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ture"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>