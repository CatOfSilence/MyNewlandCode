<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityZigbee">

    <EditText
        android:text="192.168.0.200"
        android:id="@+id/etIP"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="IP地址"/>

    <EditText
        android:text="951"
        android:id="@+id/etPort"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="端口"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openConnect"
        android:text="打开TCP连接   "/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getVal"
        android:text="获取数据"/>
    <Button
        android:layout_width="wrap_content"
        android:text="停止"
        android:onClick="stop"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="wrap_content"
        android:text="开双联继电器1"
        android:onClick="openRelay"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="wrap_content"
        android:text="关双联继电器1"
        android:onClick="closeRelay"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="wrap_content"
        android:text="开双联继电器2"
        android:onClick="openRelay2"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="wrap_content"
        android:text="关双联继电器2"
        android:onClick="closeRelay2"
        android:layout_height="wrap_content"/>
</LinearLayout>